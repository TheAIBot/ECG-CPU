dp decoder(in op : ns(3);
		   out pcJMP : ns(1);
		   out ALUInstruction  : ns(2);
		   out intermediate : ns(1);
		   out storeALU : ns(1))
{
	sig x : ns(5);
	always
	{
		x = (op == 0b000) ? 0b00001 :
			(op == 0b001) ? 0b01101 :
			(op == 0b010) ? 0b00101 :
			(op == 0b011) ? 0b00011 :
			(op == 0b100) ? 0b01011 :
			(op == 0b101) ? 0b00000 :
			(op == 0b110) ? 0b00000 :
							0b10000;
		pcJMP = x[0];
		ALUInstruction = x[1:2];
		intermediate = x[3];
		storeALU = x[4];
	}
}
